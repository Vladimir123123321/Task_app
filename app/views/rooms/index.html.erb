<p id="notice"><%= notice %></p>

<h1>All users</h1>

<table>
  <div>
    <% @users.each do |user| %>
      <% if user.id != current_user.id %>
        <div>
        <%= link_to "Message #{user.email}", rooms_path(sender_id: current_user.id, recipient_id: user.id), method: "post" %>
        </div>
      <% end %>
    <% end %>
  </div>
  <h1>All Chats</h1>
  <tbody>
    <% @rooms.each do |conversation| %>
    <% if conversation.sender_id == current_user.id || conversation.recipient_id == current_user.id %>
      <% if conversation.sender_id == current_user.id %>
        <% recipient = User.find(conversation.recipient_id) %>
      <% else %>
        <% recipient = User.find(conversation.sender_id) %>
      <% end %>
      <% unless current_user.id == recipient %>
        <div class="columns">
          <div class="column">
            <div class="inline-block"><%= link_to recipient.email, conversation %></div>
          </div>
        </div>
      <% end %>
    <% end %>
    <% end %>
  </tbody>
</table>

<br>
