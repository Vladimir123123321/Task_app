<div class="profile_container">
  <div class="logged" >
    <p> Logged in as <strong><%= @person.email %></strong>.</p>
    <p><%= @person.count_of_solve %></p>
  </div>
  <div>
    <text>Рейтинг решалы :</text> <%= @person.solver_rate  %>
    <div><text>Рейтинг составителя задач :</text> <%= @person.task_author_rate %></div>
  </div>
  <div>
    <% if @person.count_of_solve >= 2 %>
      <text>Решала 1 уровня</text>
    <%= image_tag("kubok.png", size: "50x50")  %>
      <% end %>
  </div>
  <div>
    <% if @person.id == @answerfirst %>
    <text>Герой системы</text>
      <%= image_tag("firstanswer.jpg", size: "50x50")  %>
    <% end %>
  </div>
  <div>
    <% if @person.id == @firstUser %>
      <text>Старожила</text>
      <%= image_tag("старожила.png", size: "50x50")  %>
    <% end %>
  </div>
  <div class="allTasks" >
    <% @person_posts.each do |post| %>
      <%= link_to post.title, post_path(post) %>
    <%end %>
  </div>
</div>

